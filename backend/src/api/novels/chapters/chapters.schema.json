{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Novel",
  "description": "A chapter of a novel",
  "required": [
      "title",
      "content",
      "number",
      "editor_id",
      "translator_id"
  ],
  "properties": {
      "id": {
          "$id": "#/properties/id",
          "type": "integer",
          "title": "The novel's ID."
      },
      "title": {
        "$id": "#/properties/title",
        "type": "string",
        "title": "The chapter's title."
      },
      "content": {
        "$id": "#/properties/content",
        "type": "string",
        "title": "The content of the chapter."
      },
      "number": {
        "$id": "#/properties/number",
        "type": "number",
        "title": "The number of the chapter."
      },
      "editor_id": {
        "$id": "#/properties/editor_id",
        "type": "number",
        "title": "The ID of the editor that edited the chapter."
      },
      "translator_id": {
        "$id": "#/properties/translator_id",
        "type": "number",
        "title": "The ID of the translator that translated the chapter."
      },
      "novel_id": {
        "$id": "#/properties/novel_id",
        "type": "number",
        "title": "The ID of the novel that the chapter belongs to."
      },
      "deleted_at": {
          "$id": "#/properties/deleted_at",
          "type": "string",
          "title": "The date the chapter was deleted."
      },
      "created_at": {
          "$id": "#/properties/created_at",
          "type": "string",
          "title": "The date the chapter was created."
      },
      "updated_at": {
          "$id": "#/properties/updated_at",
          "type": "string",
          "title": "The date the chapter was last updated."
      }
  },
  "additionalProperties": false
}