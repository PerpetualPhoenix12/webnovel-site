{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "User",
  "description": "User account",
  "required": [
      "username",
      "email",
      "password"
  ],
  "properties": {
      "id": {
          "$id": "#/properties/id",
          "type": "integer",
          "title": "The user's ID"
      },
      "username": {
          "$id": "#/properties/username",
          "type": "string",
          "title": "The user's username."
      },
      "password": {
        "$id": "#/properties/password",
        "type": "string",
        "title": "The user's password."
      },
      "email": {
          "$id": "#/properties/email",
          "type": "string",
          "title": "The user's email. Must be unique."
      },
      "avatar_url": {
          "$id": "#/properties/avatar_url",
          "type": "string",
          "title": "The avatar url",
          "default": "https://tinyurl.com/y3f4r7m2"
      },
      "created_at": {
          "$id": "#/properties/created_at",
          "type": "string",
          "title": "The user's creation date."
      },
      "updated_at": {
          "$id": "#/properties/updated_at",
          "type": "string",
          "title": "The date the user was last updated."
      }
  },
  "additionalProperties": false
}